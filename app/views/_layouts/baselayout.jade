doctype html
html(lang='en', ng-app = "HVZApp")
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(name='description', content='')
		meta(name='author', content="Nito\'s Umbrella")

		link(rel='stylesheet', type='text/css', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet', type='text/css', href='/css/main.css')
		
		title HvZ@FSU | #{title}
		
		//- Put any CSS specific to the page here
		block localCSS	
			
	body
		//- Top navagation bar
		include ../_elements/top-nav-bar.jade
					
		//- Center Page
		#content.container
			//- Banner
			#banner(align='center')
				img.img-responsive(src='/img/banner.png')

			//- Display current game info if a game is currently being played
			.divider(ng-controller = "GameInfoBarControl")
				.row
					#gameStats(ng-if = "data.gameActive")
						| Current Game Info |  Humans: {{ data.humancount }} | Zombies : {{ data.zombiecount }}
					#gameStats(ng-if = "!data.gameActive")
						| No game currently being played

			.flashOutput
				//- TODO

			//- Uncomment when posting, comment when working
			//- center: h3: b.
				THIS SITE IS UNDER CONSTRUCTION (and does not work!)
					
			#pageContent.container-fluid
				block content
				
		.footer


		//- External Javascript
		script(type="text/javascript", src='/bower_components/jquery/dist/jquery.min.js')
		script(type="text/javascript", src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
		script(type="text/javascript", src='/bower_components/angularjs/angular.min.js')
		
		script(type="text/javascript", src='/js/main.js')
		
		//- Put any javascript specific to the page here
		block localJS
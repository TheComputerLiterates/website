extend ../layouts/baselayout
block content
	//- Create AJAX form for signup
	form#signup(role = "form").form-horizontal
		.form-group
			label(for="firstName").control-label.col-md-2 First Name:
			.col-md-5
				input(type="text", name="firstName", placeholder="First Name").form-control
		.form-group
			label(for="lastName").control-label.col-md-2 Last Name:
			.col-md-5
				input(type="text", name="lastName", placeholder="Last Name").form-control
		.form-group
			label(for="email").control-label.col-md-2 Email:
			.col-md-5
				input(type="email", name="email", placeholder="E-mail").form-control
		.form-group
			label(for="emailRetype").control-label.col-md-2 Confirm Email:
			.col-md-5
				input(type="email", name="emailRetype", placeholder="E-mail").form-control
		.form-group
			label(for="password").control-label.col-md-2 Password:
			.col-md-5
				input(type="password", name="password", placeholder="Password").form-control
		.form-group
			label(for="passwordRetype").control-label.col-md-2 Confirm Password:
			.col-md-5
				input(type="password", name="passwordRetype", placeholder="Password").form-control
		.form-group
			.col-md-offset-2.col-md-10
				button(type = "submit").btn.btn-default Submit

		//- To be removed, only to test response
		#test
		
	
block localJS
	script(src = "/js/cryptojs/sha256.js")
	script(type = "text/javascript", src = "/js/public/signup.js")
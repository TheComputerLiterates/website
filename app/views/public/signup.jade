extend ../_layouts/baselayout
block content
	h1 Account Sign Up
	
	.formResult
	form#signupForm.form-horizontal(role="form")
		.form-group
			label.control-label.col-md-2(for="firstName") First Name
			.col-md-7
				input.form-control(type="text", name="firstName", placeholder="John")
		.form-group
			label.control-label.col-md-2(for="lastName") Last Name
			.col-md-7
				input.form-control(type="text", name="lastName", placeholder="Doe")
		br
		.form-group
			label.control-label.col-md-2(for="email") Email
			.col-md-7
				input.form-control(type="email", name="email", placeholder="your@email.edu")
		.form-group
			.col-md-7.col-md-offset-2
				input.form-control(type="email", name="emailConfirm", placeholder="Confirm your@email.edu")
		br
		.form-group
			label.control-label.col-md-2(for="password") Password
			.col-md-7
				input.form-control(type="password", name="password", placeholder="Password")
		.form-group
			.col-md-7.col-md-offset-2
				input.form-control(type="password", name="passwordConfirm", placeholder="Confirm Password")
		
		br
		.form-group
			.col-md-7.col-md-offset-2
				input(type="checkbox", name="emailSubscribed", checked)
				span   Subscribe to email updates?
		
		
		br
		.form-group
			.formError.col-md-5.col-md-offset-2
			.col-md-2
				button#submit.btn.btn-default(type="submit") Submit

		
block localJS
	script(type="text/javascript", src="/js/cryptojs/sha256.js")
	script(type="text/javascript", src="/js/public/signup.js")
extend ../baselayout
block content
	//- Create AJAX form for signup
	form#signup
		.form-group
			label(for="firstName") First Name:
			input.form-control(type="text", name='firstName', placeholder="First Name")
		.form-group
			label(for="lastName") Last Name:
			input.form-control(type="text", name='lastName', placeholder="Last Name")
		.form-group
			label(for="username") Username:
			input.form-control(type="text", name='username', placeholder="Last Name")
		.form-group
			label(for="email") Email:
			input.form-control(type="email", name='email', placeholder="E-mail")
		.form-group
			label(for="emailRetype") Confirm Email:
			input.form-control(type="email", name='emailRetype', placeholder="E-mail")
		.form-group
			label(for="password") Password:
			input.form-control(type="password", name='password', placeholder="Password")
		.form-group
			label(for="passwordRetype") Confirm Password:
			input.form-control(type="password", name='passwordRetype', placeholder="Password")
		button(type = "submit").btn.btn-default Submit

		//- To be removed, only to test response
		#test
		
	
block localJS
	script(src = "/js/cryptojs/sha256.js")
	script(type = "text/javascript", src = "/js/public/signup.js")